doctype html
html
    head
        title JFoxUK URL Shortening Service/title
        meta(name='description', content='Some description')
        meta(charset='utf-8')
        link(rel='icon', type='image/x-icon', href='images/JFoxUK_logo.png')
        link(rel='stylesheet', href='/css/global.css')
        
    body
        div.login-box
            h2
                |URL Shortener
            form#shorten-url_form(action='/create', method='POST')
                div.user-box
                    input(type="text" name='longUrl' required="")
                    label
                        |Long URL
                div.user-box
                    input(type="text" name='shortUrl' required="")
                    label
                        |Short URL Suffix
                a(href="", onclick=`submitForm('shorten-url_form')`)
                    span
                    span
                    span
                    span
                    |Create
script.
  function submitForm(elementId) {
    let element = document.getElementById(elementId);
    element.submit();
  }
		


